# Variables
CFLAGS = -I. -c -fpic $(DBG) $(INCS)
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
DEP = $(SRC:.c=.d)
P = sample_plugin_tres
SOLIB = lib$(P).so
DEST = ~/lpvdp_plugins

# Main rules
$(SOLIB): $(OBJ)
	$(CC) -o $@ $^ -shared 

# Dependencies
-include $(DEP)

%.d: %.c
	@$(CC) $(CFLAGS) $< -M -MT $(@:.d=.o) > $@

# Commands
.PHONY: clean
clean:
	rm -f $(OBJ) $(DEP) $(SOLIB)

.PHONY: install
install: $(SOLIB)
	mkdir -p $(DEST)
	cp $(SOLIB) $(DEST)/

.PHONY: uninstall
uninstall:
	rm -f $(DEST)/$(SOLIB)

